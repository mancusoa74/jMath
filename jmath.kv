<ScreenGioco>:
    img_bg: background
    palloncino1: palloncino1
    palloncino2: palloncino2
    palloncino3: palloncino3
    testo: testo
    aeroplano: aeroplano

    Image:
        id: background
        source: 'data/screen4.jpg'
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        orientation: 'horizontal'
        id: barra_punteggio
        size_hint: (None, None)
        size: root.width, '75dp'
        pos: 0, root.height - self.size[1]
    Label:
        id: testo
        markup: True
        text: '20 + 10 = 30'
        font_size: root.height/12
    Palloncino:
        id: palloncino1
        pos: root.width/root.width + 20, 0
    Palloncino:
        id: palloncino2
        pos: (root.width/2) - (self.width/2), 0
    Palloncino:
        id: palloncino3
        pos: (root.width) - (self.width/1) - 20, 0
    Aeroplano:
        id: aeroplano
        pos: 0,0


<Cuoricino>:
    id: cuoricino
    source: 'data/cuoricino.png'
    size_hint: (None, None)
    width: '50dp'
    height: '50dp'
    
<Pollice>:
    id: cuoricino
    source: 'data/pollice.png'
    size_hint: (None, None)
    width: '35dp'
    height: '35dp'
        

<Palloncino>:
    id: palloncino
    size_hint: (None, None)
    size: '120dp', '250dp'
    pos_hint: {'None': 'None'}
    canvas:
        Ellipse:
            source: 'data/palloncino.png'
            pos: self.pos
            size: self.size
    Label:
        id: palloncino_label
        markup: True
        center_x: root.center_x
        center_y: root.center_y  + (root.size[1]/3.5)
        font_size: root.height/5
        text: '0'

<Aeroplano>:
    source: 'data/plane1.png'
    size_hint: (None, None)
    pos_hint: {'None': 'None'}
    width: '300dp'
    height: '0dp' # a 0 per non far vedere l'oggetto


<ScreenStatistiche>:
    BoxLayout:
        Button:
            text: 'Statistiche'