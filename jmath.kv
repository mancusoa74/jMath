#:kivy 1.0
#:set button_size_ratio 3


<ScreenInizio>:
    button_plus: button_plus
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/inizio_background.jpg'
    Button:
        id: button_plus
        background_normal: 'data/piu.png' 
        background_down: 'data/piu_down.png'
        size_hint: (None, None)
        width: root.width / button_size_ratio
        height: root.width / button_size_ratio
        center_x: root.width/4
        y: 3 * (root.height/4)
        #on_press: print("+")
        on_press: root.inizia_livello_piu()
	Button:
		background_normal: 'data/meno.png'
        background_down: 'data/meno_down.png'
		size_hint: (None, None)
		width: root.width / button_size_ratio
		height: root.width / button_size_ratio
		center_x: 3 * (root.width/4)
		y: 3 * (root.height/4)
        on_press: root.inizia_livello_meno()
	Button:
		#source: 'data/per.png'
        background_normal: 'data/per.png'
        background_down: 'data/per_down.png'
		size_hint: (None, None)
		width: root.width / button_size_ratio
		height: root.width / button_size_ratio
		center_x: root.width/4
		y: 2 * (root.height/4)
        on_press: root.inizia_livello_per()
	Button:
		# source: 'data/diviso.png'
        background_normal: 'data/diviso.png'
        background_down: 'data/diviso_down.png'
		size_hint: (None, None)
		width: root.width / button_size_ratio
		height: root.width / button_size_ratio
		center_x: 3 * (root.width/4)
		y: 2 * (root.height/4)
        on_press: root.inizia_livello_diviso()
	Button:
		background_normal: 'data/button_settings.png'
        background_down: 'data/button_settings_down.png'
        size_hint: (None, None)
		width: root.width / (button_size_ratio +1 )
        height: root.width / (button_size_ratio +1 )
		center_x: 1* (root.width/4)
		y: 1* (root.height/16)
        on_press: root.inizia_opzioni()
	Button:
		background_normal: 'data/button_stats.png'
        background_down: 'data/button_stats_down.png'
		size_hint: (None, None)
		width: root.width / (button_size_ratio +1 )
        height: root.width / (button_size_ratio +1 )
		center_x: 3 * (root.width/4)
		y: 1* (root.height/16)
        on_press: print("stats")



